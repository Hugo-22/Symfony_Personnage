{% endblock  %}


{% block body %}

<div class="row">
    <div class="col-2">
        <img src="{{ asset('images/armes/' ~ arme.nom ~ '.png') }}" alt="">
    </div>
    <div class="col">
       
        <h3>Les caractéristiques : </h3>
        <ul>
            <li>{{ arme.nom }}</li>
            <li>{{ arme.desc }}</li>
