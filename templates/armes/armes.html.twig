{% extends 'base.html.twig' %}


{% block title %}Armes{% endblock %}

{% block monTitre %}
Liste des armes
{% endblock  %}


{% block body %}

<table class="table">
    {% for arme in armes %}

    <tr class="thead-dark">
        <td><img src="{{ asset('images/armes/' ~ arme.nom ~ '.png') }}" alt=""></td>
        <td><a href="{{ path('afficher_arme', {'nom' : arme.nom}) }}">{{ arme.nom }}</a></td>
    </tr>
    {%  endfor %}

</table>
{% endblock %}
