{% extends 'base.html.twig' %}


{% block title %}Personnages{% endblock %}

{% block monTitre %}
Liste des personnages
{% endblock  %}


{% block body %}

     {# <div><img src="{{ asset("images/personnages/Marc.png") }}"></div>
        <div>Pseudo : {{ pseudo }}</div>
        <div>Age : {{ age }}</div>
        <div>Force : {{ carac.force }}</div>
        <div>Agilité : {{ carac.agi }}</div>
        <div>Intelligence : {{ carac.intel }}</div> #}

        <table class="table">
            <tr class="thead-dark">
                <th>Image</th>
                <th>Nom</th>
                <th>Age</th>
                <th>Sexe</th>
                <th>Force</th>
                <th>Agilité</th>
                <th>Intelligence</th>
            </tr>
            {% for player in players %}

            <tr>
                <td><img src="{{asset('images/personnages/' ~ player.nom ~ '.png') }}" alt="player"></td>
                <td><a href="{{ path('afficher_personnage', {'nom' : player.nom|lower}) }}">{{ player.nom }}</a></td>
                <td>{{ player.age }}</td>
                <td>
                    {% if player.sexe %}
                        Homme
                        {% else %}
                        Femme
                        {% endif %}
                </td>
                <td>{{ player.carac.force}}</td>
                <td>{{ player.carac.agi}}</td>
                <td>{{ player.carac.intel}}</td>
            </tr>
            {%  endfor %}

        </table>


{% endblock %}
